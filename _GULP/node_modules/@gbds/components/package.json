{
    "name": "@gbds/components",
    "homepage": "https://gbds-storybook-dev.apps.pcfepg3mi.gm.com/",
    "main": "js/bundle.js",
    "types": "js/components/index.d.ts",
    "files": [
        "scss/**/*",
        "js/**/*",
        "css/**/*"
    ],
    "version": "2.0.8",
    "description": "",
    "browserslist": [
        "last 2 major versions",
        "not ie > 0",
        "not ie_mob > 0",
        "not edge 17",
        "not dead"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --cache",
        "tests/**/*.spec.ts": "jest",
        "src/**/*.scss": "stylelint"
    },
    "scripts": {
        "autoprefix-dist-components": "postcss dist/css/components/**/*.css --replace --use autoprefixer --no-map",
        "build": "npm run clean-dist && npm run build-webpack && npm run build-ts && npm run build-sass && npm run copy-package-readme ",
        "build-sass": "npm run compile-component-sass && npm run copy-source-style-to-dist",
        "build-ts": "tsc -p tsconfig.prod.json",
        "build-webpack": "webpack --config webpack.prod.js",
        "clean-dist": "node_modules/.bin/rimraf ./dist",
        "compile-component-sass": "sass src/scss/components:dist/css/components --no-source-map && npm run autoprefix-dist-components",
        "copy-source-style-to-dist": "node scripts/copy-source-style-to-dist.js",
        "copy-package-readme": "node scripts/copy-package-readme.js",
        "generate": "plop",
        "generate-docs": "typedoc --plugin typedoc-plugin-markdown,typedoc-plugin-no-inherit --exclude \"**/*+(.spec|.e2e|.stories).ts\" --hideBreadcrumbs --excludePrivate --out docs/ src/ts",
        "eslint": "eslint",
        "lint": "npm run lint-ts && npm run lint-sass",
        "lint-ts": "eslint src/ts/**/*.ts --cache --fix",
        "lint-sass": "stylelint src/scss/**/*.scss --fix",
        "pub": "npm run test && npm run build && cd dist && npm publish",
        "sass": "sass",
        "start": "webpack-dev-server --config webpack.dev.js",
        "build-storybook": "npm run generate-docs && npm run build-webpack && build-storybook -s ./dist,./assets",
        "storybook": "npm run generate-docs && start-storybook -p 6006 -s ./dist,./assets",
        "test": "jest tests"
    },
    "keywords": [],
    "author": "",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@googlemaps/jest-mocks": "0.0.3",
        "@storybook/addon-docs": "^5.3.18",
        "@storybook/addon-viewport": "^5.3.18",
        "@storybook/addons": "^5.3.19",
        "@storybook/html": "^5.3.18",
        "@storybook/theming": "^5.3.19",
        "@types/jest": "^25.2.1",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "autoprefixer": "^9.7.6",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.5.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "html-webpack-plugin": "^4.2.0",
        "husky": "^4.2.5",
        "jest": "^25.4.0",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "lint-staged": "^10.1.7",
        "mini-css-extract-plugin": "^0.9.0",
        "ncp": "^2.0.0",
        "plop": "^2.6.0",
        "postcss-cli": "^7.1.1",
        "postcss-loader": "^3.0.0",
        "prettier": "^2.0.5",
        "recursive-readdir-sync": "1.0.6",
        "sass": "^1.26.3",
        "sass-loader": "^8.0.2",
        "stylelint": "^13.3.3",
        "stylelint-config-sass-guidelines": "^7.0.0",
        "stylelint-order": "^4.0.0",
        "ts-jest": "^25.4.0",
        "ts-loader": "^7.0.1",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typedoc": "^0.17.7",
        "typedoc-plugin-markdown": "^2.2.17",
        "typedoc-plugin-no-inherit": "^1.1.10",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0",
        "webpack-fix-style-only-entries": "^0.4.0",
        "webpack-merge": "^4.2.2"
    },
    "dependencies": {
        "@google/markerclustererplus": "^5.0.4",
        "@types/googlemaps": "^3.39.11"
    }
}
